<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_stands/models/rules">
    <fieldset name="general">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="number"
                type="text"
                label="COM_STANDS_FORM_STAND_NUMBER_LABEL"
                description="COM_STANDS_FORM_STAND_NUMBER_DESC"
                hint="COM_STANDS_FORM_STAND_NUMBER_HINT"
                message="COM_STANDS_FORM_STAND_NUMBER_MESSAGE"
                autocomplete="off"
                required="true"
                maxlength="255"
                class="span12"
        />
        <field
                name="square"
                type="text"
                label="COM_STANDS_FORM_STAND_SQUARE_LABEL"
                description="COM_STANDS_FORM_STAND_SQUARE_DESC"
                hint="COM_STANDS_FORM_STAND_SQUARE_HINT"
                message="COM_STANDS_FORM_STAND_SQUARE_MESSAGE"
                validate="square"
                required="true"
                class="span12"
                maxlength="10"
        />
        <field
                name="open"
                type="list"
                label="COM_STANDS_FORM_STAND_OPEN_LABEL"
                description="COM_STANDS_FORM_STAND_OPEN_DESC"
                required="true"
                class="span12"
                filter="integer"
        >
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
        </field>
        <field
                name="itemID"
                type="StandItem"
                label="COM_STANDS_FORM_STAND_PRICE_ITEM_LABEL"
                description="COM_STANDS_FORM_STAND_PRICE_ITEM_DESC"
                required="true"
                class="span12"
                filter="integer"
        />
        <field
                name="catalogID"
                type="Catalog"
                label="COM_STANDS_FORM_STAND_CATALOG_LABEL"
                description="COM_STANDS_FORM_STAND_CATALOG_DESC"
                required="true"
                class="span12"
        />
        <field
                name="pavilionID"
                type="Pavilion"
                label="COM_STANDS_FORM_STAND_PAVILION_LABEL"
                description="COM_STANDS_FORM_STAND_PAVILION_DESC"
                required="true"
                class="span12"
        />
    </fieldset>
</form>